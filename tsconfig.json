{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2015", "ES2016", "ES2017", "DOM", "ScriptHost"], // 启用实验性的ES装饰器
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "module": "commonjs",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["@dcloudio/types", "@types/wechat-miniprogram", "@types/uni-app"],
    "allowJs": true,
    "strict": false,
    "noImplicitAny": false,
    "declaration": true, // 为装饰器提供元数据的支持
    "outDir": "./bin",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true, // 启用所有严格类型检查选项
    "esModuleInterop": true, // 启用es模块导入到commonjs的转换
    "skipLibCheck": true // 跳过声明文件的检查
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "examples", "**/*.js"]
}
